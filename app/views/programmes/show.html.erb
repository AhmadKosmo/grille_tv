<div class="center jumbotron">
  <div class="row">
    <div class="col-sm-6">
      <h2>
        Information sur le Programme
      </h2>
    </div>

    <div class="col-sm-6 btn-add">
      <%= link_to "    Modifier le programme", edit_programme_path(@programme =Programme.find(params[:id])), class: "btn btn-primary glyphicon glyphicon-pencil btn-xlarge"%>
    </div>
  </div>


  <div class="row">
    <div class="col-md-12">
      <%= form_for @programme =Programme.find(params[:id]), html: {class: "form-horizontal", role: "form"} do |f| %>

      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :titre %>
        </div>

        <div class="col-sm-10">
          <%= f.text_field :titre, class: "form-control", disabled: true %>
        </div>
      </div>


      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :type_programme %>
        </div>

        <div class="col-sm-10">
          <%= f.text_field :type_programme, class: "form-control", disabled: true %>
        </div>
      </div>


      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :classification %>
        </div>

        <div class="col-sm-10">
          <%= f.text_field :classification, class: "form-control", disabled: true %>
        </div>
      </div>


      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :realisateur %>
        </div>

        <div class="col-sm-10">
          <%= f.text_field :realisateur, value: Realisateur.find(@programme.realisateur_id).nom, class: "form-control", disabled: true %>
        </div>
      </div>



      <% end%>
      <div class="col-xs-offset-4 col-xs-4">
        [<%= link_to "Tous les programmes", programmes_path %>]
      </div>

    </div>
  </div>
</div>
