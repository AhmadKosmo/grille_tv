<%= render 'shared/errors', obj: @chaine %>

<div class="center jumbotron">
  <div class="row">
    <div class="col-sm-6">
      <h2> Ajouter une nouvelle Chaîne</h2>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <%= form_for @chaine, html: {class: "form-horizontal", role: "form"} do |f| %>

      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :nom %>
        </div>

        <div class="col-sm-10">
          <%= f.text_field :nom, class: "form-control", autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit class: 'btn btn-primary btn-lg', value: "Ajouter la chaîne" %>
        </div>
      </div>

      <% end%>
      <div class="col-xs-offset-4 col-xs-4">
        [<%= link_to "Tous les chaînes", chaines_path %>]
      </div>
    </div>
  </div>

</div>
