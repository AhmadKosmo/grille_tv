<div class="center jumbotron">
  <div class="row">
    <div class="col-sm-6">
      <h2>
        Information sur la diffusion
      </h2>
    </div>

    <div class="col-sm-6 btn-add">
      <%= link_to "    Modifier la diffusion", edit_diffusion_path(@diffusion), class: "btn btn-primary glyphicon glyphicon-pencil btn-xlarge"%>
    </div>
  </div>


  <div class="row">
    <div class="col-md-12">
      <%= form_for @diffusion, html: {class: "form-horizontal", role: "form"} do |f| %>

      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :programme_id %>
        </div>

        <div class="col-sm-10">
          <%= f.text_field :programme_id, class: "form-control", disabled: true, value: @programme.titre %>
        </div>
      </div>



      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :chaine_id %>
        </div>

        <div class="col-sm-10">
          <%= f.text_field :chaine_id, class: "form-control", disabled: true, value: @chaine.nom %>
        </div>
      </div>


      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :jour, value: "Horaire" %>
        </div>

        <div class="col-sm-10">
          <%= f.text_field :jour, class: "form-control", disabled: true, value: @diffusion.jour+" Ã  "+@diffusion.heure %>
        </div>
      </div>



      <% end%>
      <div class="col-xs-offset-4 col-xs-4">
        [<%= link_to "Tous les diffusions", diffusions_path %>]
      </div>

    </div>
  </div>
</div>
