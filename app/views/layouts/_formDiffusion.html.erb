<% if @diffusion.errors.any? %>
<h2> The following errors prevented the diffusion from getting created</h2>
<ul>
  <% @diffusion.errors.full_messages.each do |msg| %>
  <li> <%= msg %> </li>
  <% end%>
</ul>
<%end%>


<div class="row">
  <div class="col-md-12">
    <%= form_for @diffusion, html: {class: "form-horizontal", role: "form"} do |f| %>

    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :programme_id %>
      </div>

      <div class="col-sm-10">
        <%= f.select :programme_id, options_for_select(@array_of_noms_programmes_ids_programmes), 
        class: "form-control",
          autofocus: true%>
      </div>
    </div>



    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :chaine_id %>
      </div>

      <div class="col-sm-10">
        <%= f.select :chaine_id, options_for_select(@array_of_noms_chaines_ids_chaines), class: "form-control", autofocus: true%>
      </div>
    </div>


    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :jour %>
      </div>

      <div class="col-sm-10">
        <%= f.select :jour, options_for_select([['Lundi', 'Lundi'],
          ['Mardi','Mardi'],
          ['Mercredi','Mercredi'],
          ['Jeudi','Jeudi'],
          ['Vendredi','Vendredi'],
          ['Samedi','Samedi'],
          ['Dimanche','Dimanche']]), class: "form-control", autofocus: true%>
      </div>
    </div>


    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :heure %>
      </div>

      <div class="col-sm-10">
        <%= f.text_field :heure, class: "form-control", autofocus: true %>
      </div>
    </div>


    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit class: 'btn btn-primary btn-lg' %>
      </div>
    </div>



    <% end%>
    <div class="col-xs-offset-4 col-xs-4">
      [<%= link_to "Tous les diffusions", diffusions_path %>]
    </div>

  </div>
</div>

<script>
</script>
