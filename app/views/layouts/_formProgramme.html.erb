<% if @programme.errors.any? %>
<h2> The following errors prevented the programme from getting created</h2>
<ul>
  <% @programme.errors.full_messages.each do |msg| %>
  <li> <%= msg %> </li>
  <% end%>
</ul>
<%end%>


<div class="row">
  <div class="col-md-12">
    <%= form_for @programme, html: {class: "form-horizontal", role: "form"} do |f| %>

    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :titre %>
      </div>

      <div class="col-sm-10">
        <%= f.text_field :titre, class: "form-control", autofocus: true %>
      </div>
    </div>


    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :type_programme %>
      </div>

      <div class="col-sm-10">
        <%= f.text_field :type_programme, class: "form-control", autofocus: true %>
      </div>
    </div>


    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :classification %>
      </div>

      <div class="col-sm-10">
        <%= f.text_field :classification, class: "form-control", autofocus: true %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit class: 'btn btn-primary btn-lg' %>
      </div>
    </div>



    <% end%>
    <div class="col-xs-offset-4 col-xs-4">
      [<%= link_to "Tous les programmes", programmes_path %>]
    </div>

  </div>
</div>
