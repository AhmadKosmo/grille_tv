<div class="center jumbotron">
<h1> Tous les Réalisateurs</h1>

<p>
<%= link_to "  Ajouter un nouvel réalisateur", new_realisateur_path, class: "btn btn-primary glyphicon glyphicon-plus btn-xlarge"%>
</p>

<table>
  <tr>
    <th># id </th>
    <th> Nom </th>
  </tr>

  <% @realisateurs.each do |realisateur| %>
  <tr>
    <td> <%= realisateur.id %> </td>
    <td> <%= realisateur.nom %> </td>
    <td> <%= link_to "Afficher", realisateur_path(realisateur) %>  </td>
    <td>  | <%= link_to "Modifier", edit_realisateur_path(realisateur) %>  </td>
    <td>  | <%= link_to "Supprimer", realisateur_path(realisateur), method: :delete, data: {confirm: "Êtes-vous sûr?"} %> </td>
  </tr>
  <%end%>

</table>
</div>
